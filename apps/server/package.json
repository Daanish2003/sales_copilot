{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@sales_copilot/config": "workspace:*",
    "@types/bun": "^1.2.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "tsdown": "^0.16.5",
    "typescript": "^5.8.2"
  }
}
